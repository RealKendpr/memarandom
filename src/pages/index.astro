---
import Main from "../layout/main.astro";
import About from "../components/about.astro";
import ReactCount from "../components/reactCounter";
import MemeFrame from "../components/memeFrame";
import FetchMeme from "../components/fetchMeme";
import Footer from "../components/footer.astro";
---

<Main title="Memes Page">
  <main>
    <div class="meme-generator wide:max-w-sm wide:mx-auto wider:relative">
      <MemeFrame client:load />
      <div
        class="right-2 bottom-36 absolute flex flex-col gap-y-2 bg-blue-950/50 rounded-md wider:left-[calc(100%+.5rem)] wider:right-auto wider:bottom-1/2 translate-y-1/2 wider:h-fit p-2"
      >
        <ReactCount client:idle />
        <FetchMeme client:idle />
      </div>
    </div>
    <About />
  </main>
  <Footer />
</Main>
