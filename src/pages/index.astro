---
import Main from "../layout/main.astro";
import Footer from "../components/footer.astro";
import About from "../components/about.astro";
import ReactCount from "../components/react-counter";
---

<Main title="Memes Page">
  <main>
    <div class="meme-generator wider:relative">
      <div class="img grid place items-center min-h-dvh">
        <img class="select-none" src="./meme.png" alt="a meme" />
      </div>
      <!-- //error when having * css selector -->
      <div
        class="right-2 bottom-24 translate-y-0 absolute flex flex-col gap-y-1 bg-blue-950/50 rounded-md wider:left-[calc(100%+.5rem)] wider:right-auto wider:bottom-1/2"
      >
        <ReactCount client:idle />
        <button class="button"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="36px"
            height="36px"
            viewBox="0 0 20 20"
            class="hover:text-zinc-300 transition-colors"
            fill="currentColor"
            ><path
              d="M15.65 4.35A8 8 0 1 0 17.4 13h-2.22a6 6 0 1 1-1-7.22L11 9h7V2z"
            ></path></svg
          >
        </button>
      </div>
    </div>
    <About />
  </main>
  <Footer />
</Main>
